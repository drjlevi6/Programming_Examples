%!PS% fontchar.ps Ñ draws the 256 characters of a user-specified font in 18 points,% as a 16x16 array.% stack: user must presupply font name on stack/myfontname (Times-Roman) def % currently font name must be hard-coded/inch {72 mul} def/x0 1 inch def/y0 9 inch def/fontsize 24 def/axislabelsize 10 def/xyinc {fontsize 2 add} bind def	% size of a square "cell" containing					% character (no actual borders drawn)% Axis labels/xlabels [(0_) (1_) (2_) (3_) (4_) (5_) (6_) (7_) (8_) (9_) (a_) (b_) (c_) (d_) (e_) (f_)] def/ylabels [(_0) (_1) (_2) (_3) (_4) (_5) (_6) (_7) (_8) (_9) (_a) (_b) (_c) (_d) (_e) (_f)] def% Draw axes0.5 setlinewidthx0 y0 moveto pstackxyinc neg 0 rmovetox0 xyinc 16 mul add y0 linetox0 y0 moveto0 xyinc rmovetox0 y0 xyinc 16 mul sub linetostroke% Draw axis labels/Courier findfont axislabelsize scalefont setfont0 1 15 {	% stack: fontname	% draw an xlabel	dup dup dup dup	% fontname temp temp temp temp temp	xyinc mul x0 add 1 add	% " " " " (temp * xyinc  + x0 + 1) (uses 1 temp)	y0 3 add moveto		% " " " "	xlabels exch get show	% " " " (uses 1 temp)	% calc x-coord of ylabel	ylabels exch get stringwidth pop neg	% " " " (- width) (uses 1 temp)	x0 add 1 sub			% " " " (x0 - 1-width)	% calc y-coord of ylabel and draw	y0 			% " temp (x0 - 1-width) y0	3 -1 roll 1 add		% x-coord y0 (temp + 1)	xyinc mul sub		% " " (x0 - 1)  (y0 - (temp+1)* xyinc) (uses 1 temp)	moveto			% " " 	ylabels exch get show	% (uses 1 temp) (stack: fontname)} for% draw fontname/NewCenturySchlbk-Roman findfont 16 scalefont setfontx0 y0 0.5 inch add moveto(Font: ) show myfontname show% draw the charactersmyfontname cvx findfont fontsize scalefont setfont0 1 255 {	dup dup	% make copy(ies) of control variable (CV)	% calc char's abcissa	16 mod xyinc mul x0 add 1 add	% (uses 1 CV)	% calc char's ordinate and move to location	exch 16 idiv neg 1 sub xyinc mul y0 add	% (uses 1 CV)	moveto	% get and draw the char	currentfont /Encoding get	exch get	% get char represented by CV (uses 1 CV)	glyphshow} forshowpage